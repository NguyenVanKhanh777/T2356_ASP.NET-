@model DevXuongMoc.Models.AdminUser

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Xóa Người dùng quản trị</h1>
    <h3 class="text-center text-danger">Bạn có chắc chắn muốn xóa bản ghi này không?</h3>
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-danger text-white">
            <h4>
                Chi tiết người dùng quản trị
            </h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Account</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Account)</dd>

                <dt class="col-sm-3">Password</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Password)</dd>

                <dt class="col-sm-3">Employee ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MaNhanSu)</dd>

                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">Avatar</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Avatar)</dd>

                <dt class="col-sm-3">Department ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IdPhongBan)</dd>

                <dt class="col-sm-3">Created Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NgayTao)</dd>

                <dt class="col-sm-3">Created By</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NguoiTao)</dd>

                <dt class="col-sm-3">Updated Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NgayCapNhat)</dd>

                <dt class="col-sm-3">Updated By</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NguoiCapNhat)</dd>

                <dt class="col-sm-3">Session Token</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SessionToken)</dd>

                <dt class="col-sm-3">Salt</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Salt)</dd>

                <dt class="col-sm-3">Is Admin</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IsAdmin)</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TrangThai)</dd>

                <dt class="col-sm-3">Is Deleted</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IsDelete)</dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash-fill"></i> Delete
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</div>
