@model DevXuongMoc.Models.AdminUser

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Tạo người dùng quản trị</h1>
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Thông tin người dùng quản trị</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Account" class="form-label"></label>
                    <input asp-for="Account" class="form-control" />
                    <span asp-validation-for="Account" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MaNhanSu" class="form-label"></label>
                    <input asp-for="MaNhanSu" class="form-control" />
                    <span asp-validation-for="MaNhanSu" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" type="tel" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Avatar" class="form-label"></label>
                    <input asp-for="Avatar" type="text" class="form-control" />
                    <span asp-validation-for="Avatar" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IdPhongBan" class="form-label"></label>
                    <input asp-for="IdPhongBan" class="form-control" />
                    <span asp-validation-for="IdPhongBan" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NgayTao" class="form-label"></label>
                    <input asp-for="NgayTao" type="datetime-local" class="form-control" />
                    <span asp-validation-for="NgayTao" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NguoiTao" class="form-label"></label>
                    <input asp-for="NguoiTao" class="form-control" />
                    <span asp-validation-for="NguoiTao" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NgayCapNhat" class="form-label"></label>
                    <input asp-for="NgayCapNhat" type="datetime-local" class="form-control" />
                    <span asp-validation-for="NgayCapNhat" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NguoiCapNhat" class="form-label"></label>
                    <input asp-for="NguoiCapNhat" class="form-control" />
                    <span asp-validation-for="NguoiCapNhat" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SessionToken" class="form-label"></label>
                    <input asp-for="SessionToken" class="form-control" />
                    <span asp-validation-for="SessionToken" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Salt" class="form-label"></label>
                    <input asp-for="Salt" class="form-control" />
                    <span asp-validation-for="Salt" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IsAdmin" class="form-label"></label>
                    <select asp-for="IsAdmin" class="form-select">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                    <span asp-validation-for="IsAdmin" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TrangThai" class="form-label"></label>
                    <input asp-for="TrangThai" class="form-control" />
                    <span asp-validation-for="TrangThai" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IsDelete" class="form-label"></label>
                    <select asp-for="IsDelete" class="form-select">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                    <span asp-validation-for="IsDelete" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-check-circle"></i> Create
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
