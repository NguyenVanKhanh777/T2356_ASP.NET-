@model DevXuongMoc.Models.AdminUser

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Chi tiết người dùng quản trị</h1>

