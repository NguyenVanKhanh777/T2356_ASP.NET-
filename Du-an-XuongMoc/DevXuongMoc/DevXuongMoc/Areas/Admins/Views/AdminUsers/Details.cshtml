            <dl class="row">
                <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.Account)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Account)</dd>

                <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.Password)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Password)</dd>

                <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.MaNhanSu)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MaNhanSu)</dd>

                <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.Name)</dt>
