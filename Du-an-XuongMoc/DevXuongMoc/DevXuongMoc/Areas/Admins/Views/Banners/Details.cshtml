@model DevXuongMoc.Models.Banner

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Chi tiết Banner</h1>
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">Thông tin Banner</h4>
        </div>
        <div class="card-body">
            <h5 class="text-muted">Chi tiết</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Image</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Image)</dd>

                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-3">SubTitle</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SubTitle)</dd>

                <dt class="col-sm-3">Urls</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Urls)</dd>

                <dt class="col-sm-3">Orders</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Orders)</dd>

                <dt class="col-sm-3">Type</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Type)</dd>

                <dt class="col-sm-3">Created Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedDate)</dd>

                <dt class="col-sm-3">Updated Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdatedDate)</dd>

                <dt class="col-sm-3">Admin Created</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AdminCreated)</dd>

                <dt class="col-sm-3">Admin Updated</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AdminUpdated)</dd>

                <dt class="col-sm-3">Notes</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Notes)</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-3">Is Deleted</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Isdelete)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</div>
