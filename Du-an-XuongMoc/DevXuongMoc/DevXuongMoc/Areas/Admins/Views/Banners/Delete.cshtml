@model DevXuongMoc.Models.Banner

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center text-danger mb-4">Xóa Banner</h1>
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Bạn có muốn xóa không?</h4>
        </div>
        <div class="card-body">
            <h5 class="text-muted">Chi tiết Banner</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Image</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Image)</dd>

                <dt class="col-sm-4">Title</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-4">SubTitle</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.SubTitle)</dd>

                <dt class="col-sm-4">Urls</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Urls)</dd>

                <dt class="col-sm-4">Orders</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Orders)</dd>

                <dt class="col-sm-4">Type</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Type)</dd>

                <dt class="col-sm-4">Created Date</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedDate)</dd>

                <dt class="col-sm-4">Updated Date</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.UpdatedDate)</dd>

                <dt class="col-sm-4">Admin Created</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.AdminCreated)</dd>

                <dt class="col-sm-4">Admin Updated</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.AdminUpdated)</dd>

                <dt class="col-sm-4">Notes</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Notes)</dd>

                <dt class="col-sm-4">Status</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-4">Is Deleted</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Isdelete)</dd>
            </dl>

            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger me-3">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>
