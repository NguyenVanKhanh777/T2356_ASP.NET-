@model DevXuongMoc.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="my-4">Chỉnh Sửa Danh Mục</h1>

<h4>Thông Tin Danh Mục</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label">Tiêu Đề</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Icon" class="control-label">Biểu Tượng</label>
                <input asp-for="Icon" class="form-control" />
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MateTitle" class="control-label">Tiêu Đề Mạng</label>
                <input asp-for="MateTitle" class="form-control" />
                <span asp-validation-for="MateTitle" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MetaKeyword" class="control-label">Từ Khóa</label>
                <input asp-for="MetaKeyword" class="form-control" />
                <span asp-validation-for="MetaKeyword" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MetaDescription" class="control-label">Mô Tả</label>
                <input asp-for="MetaDescription" class="form-control" />
                <span asp-validation-for="MetaDescription" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Slug" class="control-label">Slug</label>
                <input asp-for="Slug" class="form-control" />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Orders" class="control-label">Thứ Tự</label>
                <input asp-for="Orders" class="form-control" />
                <span asp-validation-for="Orders" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Parentid" class="control-label">Mã Cha</label>
                <input asp-for="Parentid" class="form-control" />
                <span asp-validation-for="Parentid" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CreatedDate" class="control-label">Ngày Tạo</label>
                <input asp-for="CreatedDate" class="form-control" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="UpdatedDate" class="control-label">Ngày Cập Nhật</label>
                <input asp-for="UpdatedDate" class="form-control" />
                <span asp-validation-for="UpdatedDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AdminCreated" class="control-label">Quản Trị Viên Tạo</label>
                <input asp-for="AdminCreated" class="form-control" />
                <span asp-validation-for="AdminCreated" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AdminUpdated" class="control-label">Quản Trị Viên Cập Nhật</label>
                <input asp-for="AdminUpdated" class="form-control" />
                <span asp-validation-for="AdminUpdated" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Notes" class="control-label">Ghi Chú</label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label">Trạng Thái</label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Isdelete" class="control-label">Đã Xóa</label>
                <input asp-for="Isdelete" class="form-control" />
                <span asp-validation-for="Isdelete" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Trở Lại</a>
</div>
