@model DevXuongMoc.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center my-4">Tạo Mới Danh Mục</h1>

    <h4 class="mb-4">Danh Mục</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Icon" class="control-label"></label>
                    <input asp-for="Icon" class="form-control" />
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MateTitle" class="control-label"></label>
                    <input asp-for="MateTitle" class="form-control" />
                    <span asp-validation-for="MateTitle" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MetaKeyword" class="control-label"></label>
                    <input asp-for="MetaKeyword" class="form-control" />
                    <span asp-validation-for="MetaKeyword" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MetaDescription" class="control-label"></label>
                    <input asp-for="MetaDescription" class="form-control" />
                    <span asp-validation-for="MetaDescription" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Slug" class="control-label"></label>
                    <input asp-for="Slug" class="form-control" />
                    <span asp-validation-for="Slug" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Orders" class="control-label"></label>
                    <input asp-for="Orders" class="form-control" />
                    <span asp-validation-for="Orders" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Parentid" class="control-label"></label>
                    <input asp-for="Parentid" class="form-control" />
                    <span asp-validation-for="Parentid" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AdminCreated" class="control-label"></label>
                    <input asp-for="AdminCreated" class="form-control" />
                    <span asp-validation-for="AdminCreated" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AdminUpdated" class="control-label"></label>
                    <input asp-for="AdminUpdated" class="form-control" />
                    <span asp-validation-for="AdminUpdated" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Notes" class="control-label"></label>
                    <input asp-for="Notes" class="form-control" />
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 text-center">
                    <input type="submit" value="Tạo Mới" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-secondary btn-lg" asp-action="Index">Trở Lại Danh Sách</a>
    </div>
</div>
