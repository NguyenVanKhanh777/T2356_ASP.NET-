@model DevXuongMoc.Models.Contact

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center my-4">Xóa Liên Hệ</h1>

    <h3 class="text-center mb-4">Bạn có chắc chắn muốn xóa không?</h3>

    <div>
        <h4>Liên Hệ</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Phone)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Content)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Content)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UpdatedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UpdatedDate)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AdminCreated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AdminCreated)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AdminUpdated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AdminUpdated)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Isdelete)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Isdelete)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group text-center">
                <input type="submit" value="Xóa" class="btn btn-danger btn-lg" />
                <a class="btn btn-secondary btn-lg" asp-action="Index">Quay Lại Danh Sách</a>
            </div>
        </form>
    </div>
</div>
