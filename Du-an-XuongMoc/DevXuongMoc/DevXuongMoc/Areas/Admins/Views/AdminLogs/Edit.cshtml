@model DevXuongMoc.Models.AdminLog

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center my-4">Chỉnh Sửa Admin Log</h1>

<h4 class="text-center">AdminLog</h4>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="LogId" />

                @foreach (var property in Model.GetType().GetProperties())
                {
                    var value = property.GetValue(Model)?.ToString();
                    <div class="form-group">
                        <label asp-for="@property.Name" class="control-label"></label>
                        <input asp-for="@property.Name" value="@value" class="form-control" />
                        <span asp-validation-for="@property.Name" class="text-danger"></span>
                    </div>
                }

                <div class="form-group text-center mt-4">
                    <input type="submit" value="Lưu Thay Đổi" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-secondary" asp-action="Index">Trở Lại Danh Sách</a>
    </div>
</div>
