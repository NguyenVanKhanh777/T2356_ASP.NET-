@model DevXuongMoc.Models.Category

@{
    ViewData["Title"] = "Tạo Mới Danh Mục";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Tạo Mới Danh Mục</h1>

<h4>Danh Mục</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Tiêu đề -->
            <div class="form-group">
                <label asp-for="Title" class="control-label">Tiêu Đề</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Biểu tượng -->
            <div class="form-group">
                <label asp-for="Icon" class="control-label">Biểu Tượng</label>
                <input asp-for="Icon" class="form-control" />
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>

            <!-- Mô tả tiêu đề -->
            <div class="form-group">
                <label asp-for="MateTitle" class="control-label">Mô Tả Tiêu Đề</label>
                <input asp-for="MateTitle" class="form-control" />
                <span asp-validation-for="MateTitle" class="text-danger"></span>
            </div>

            <!-- Từ khóa SEO -->
            <div class="form-group">
                <label asp-for="MetaKeyword" class="control-label">Từ Khóa SEO</label>
                <input asp-for="MetaKeyword" class="form-control" />
                <span asp-validation-for="MetaKeyword" class="text-danger"></span>
            </div>

            <!-- Mô tả SEO -->
            <div class="form-group">
                <label asp-for="MetaDescription" class="control-label">Mô Tả SEO</label>
                <input asp-for="MetaDescription" class="form-control" />
                <span asp-validation-for="MetaDescription" class="text-danger"></span>
            </div>

            <!-- Slug -->
            <div class="form-group">
                <label asp-for="Slug" class="control-label">Slug</label>
                <input asp-for="Slug" class="form-control" />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>

            <!-- Thứ tự -->
            <div class="form-group">
                <label asp-for="Orders" class="control-label">Thứ Tự</label>
                <input asp-for="Orders" class="form-control" />
                <span asp-validation-for="Orders" class="text-danger"></span>
            </div>

            <!-- Danh mục cha -->
            <div class="form-group">
                <label asp-for="Parentid" class="control-label">Danh Mục Cha</label>
                <input asp-for="Parentid" class="form-control" />
                <span asp-validation-for="Parentid" class="text-danger"></span>
            </div>

            <!-- Người tạo -->
            <div class="form-group">
                <label asp-for="AdminCreated" class="control-label">Người Tạo</label>
                <input asp-for="AdminCreated" class="form-control" />
                <span asp-validation-for="AdminCreated" class="text-danger"></span>
            </div>

            <!-- Người cập nhật -->
            <div class="form-group">
                <label asp-for="AdminUpdated" class="control-label">Người Cập Nhật</label>
                <input asp-for="AdminUpdated" class="form-control" />
                <span asp-validation-for="AdminUpdated" class="text-danger"></span>
            </div>

            <!-- Ghi chú -->
            <div class="form-group">
                <label asp-for="Notes" class="control-label">Ghi Chú</label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <!-- Nút tạo mới -->
            <div class="form-group">
                <input type="submit" value="Tạo Mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
</div>
